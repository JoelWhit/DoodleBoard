@model DoodleBoard.Website.Models.CreateWhiteboardViewModel

@using (Html.BeginForm("Create", "Whiteboard", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="panel panel-default">
        <div class="panel-body">
            <form class="form-horizontal">
                <fieldset>
                    <legend>Create a Board</legend>
                    <div class="form-group">
                        <label for="inputBoard" class="col-sm-12">Nickname</label>
                        <div class="col-sm-12">
                            <input type="text" class="form-control" id="inputBoard">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-9">
                            <div class="checkbox">
                                <label data-toggle="collapse" data-target="#collapseOne">
                                    <input type="checkbox" data-toggle="collapse" data-target="#pwCrCollapse" /> Password?
                                </label>
                            </div>
                        </div>
                        <div id="pwCrCollapse" class="collapse col-sm-12">
                            <input type="password" class="form-control" id="inputPassword" placeholder="Optional">
                        </div>
                    </div>
                    <legend></legend>
                    <div class="form-group">
                        <div class="col-sm-10 col-sm-offset-2">
                            <button type="submit" class="btn btn-primary">Start Drawing</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
}

